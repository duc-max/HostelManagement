<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P.102"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="● Đang trống"
            android:textColor="#FF3B30"
            android:layout_below="@id/tvRoomName"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_status"
            android:padding="4dp"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá: 3.000.000 đ/tháng"
            android:layout_below="@id/tvStatus"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Người thuê: A Minh"
            android:layout_below="@id/tvPrice"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvCustomerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SĐT: 0777888639"
            android:layout_below="@id/tvCustomerName"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:layout_below="@id/btnEdit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/btnCreateContract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo hợp đồng"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvCustomerPhone"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>